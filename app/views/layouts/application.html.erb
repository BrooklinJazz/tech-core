<!DOCTYPE html>
<html>
  <head>
    <title>Techcore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <a class="navbar-brand" href="<%= organizations_path %>"><i class="fa fa-globe" aria-hidden="true"></i> TechCore</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to 'Directory', '#', :class => "btn btn-outline-secondary my-2 my-sm-0 nav-link" %></li>
            <li class="nav-item"><%= link_to 'Events', '#', :class => "btn btn-outline-secondary my-2 my-sm-0 nav-link" %></li>
            <li class="nav-item"><%= link_to 'News', '#', :class => "btn btn-outline-secondary my-2 my-sm-0 nav-link" %></li>
          </ul>
          <ul class="navbar-nav mr-auto">
            <% if true #user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="btn btn-outline-secondary my-2 my-sm-0 nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <strong>User Name</strong>
              </a>

              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to("My Events", '#', :class => "dropdown-item") %>
                <% if true #current_user.is_admin? %>
                  <%= link_to("Dashboard", '#', :class => "dropdown-item") %>
                <% end %>
                <%= link_to('Sign Out', session_path, method: :delete, :class => "dropdown-item", data: {confirm: 'Do you really want to sign out?'}) %>
              </div>
            </li>
            <% else %>
              <li class="nav-item"><%= link_to 'Sign Up', new_user_path, :class => "nav-link" %></li>
              <li class="nav-item"><%= link_to 'Login', session_path, :class => "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>
      </nav>
    </header>
    <main role="main">

      <section class=" text-center">
        <div class="container" id="map">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2602.706205702692!2d-123.11084908463799!3d49.28196397874309!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5486717984d4ef63%3A0x695af2b5a31aca7b!2s142+W+Hastings+St%2C+Vancouver%2C+BC+V6B!5e0!3m2!1sen!2sca!4v1517023185784" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <% if flash[:alert].present? %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= flash[:alert] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>

          <% if flash[:notice].present? %>
          <div id="notice" class="alert alert-info alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% end %>

          <%= yield %>
        </div>
      </div>

    </main>

    <footer class="text-muted">
      <div class="container">
        <p class="float-right">
          <a href="#">Back to top</a>
        </p>
        <p>Tee Too!</p>
      </div>
    </footer>
  </body>
  </html>
